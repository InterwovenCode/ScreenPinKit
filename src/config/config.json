{
    "General": {
        "CacheFolder": "./cache",
        "DpiScale": "Auto",
        "Language": "Auto",
        "ImageNameFormat": "ScreenPinKit_%s.png"
    },
    "Update": {
        "CheckUpdateAtStartUp": true
    },
    "HotKey": {
        "MouseThough": "alt+f",
        "ScreenPaint": "f4",
        "ScreenShot": "f7",
        "ShowClipboard": "f2",
        "SwitchScreenPaintMode": "alt+l"
    },
    "Toolbar": {
        "useWheelZoom" : true,
        "applyWheelItem" : true
    },
    "ShadowStyle": {
        "focusColor": "#ff00ff",
        "unFocusColor": "#7d7d7d",
        "useRoundStyle" : true,
        "isSaveWithShadow": false,
        "isCopyWithShadow": false
    },
    "QFluentWidgets": {
        "ThemeColor": "#ff009faa",
        "ThemeMode": "Auto"
    },
    "ShapeToolbar": {
        "brushColor": "#007d7d7d",
        "penColor": "#007d7d7d",
        "penWidth": 2,
        "penStyle": "SolidLine",
        "shape": "Rectangle"
    },
    "EraseToolbar": {
        "width": 5
    },
    "ArrowToolbar": {
        "brushColor": "#007d7d7d",
        "penColor": "#007d7d7d",
        "penWidth": 2,
        "penStyle": 1
    },
    "EffectToolbar": {
        "strength": 5,
        "effectType": "Blur"
    },
    "LineStripToolbar": {
        "width": 5,
        "color": "#007d7d7d"
    },
    "MarkerPenToolbar": {
        "width": 5,
        "color": "#007d7d7d"
    },
    "PenToolbar": {
        "width": 5,
        "color": "#007d7d7d"
    },
    "TextEditToolbar": {
        "fontFamily": "Microsoft YaHei",
        "fontSize": 15,
        "textColor": "#ffff007f"
    }
}